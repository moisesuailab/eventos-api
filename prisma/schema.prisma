generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum EventStatus {
  active
  cancelled
}

enum GuestStatus {
  pending
  confirmed
  declined
  present
}

model User {
  id        String   @id @default(uuid())
  googleId  String   @unique @map("google_id")
  email     String   @unique
  name      String
  avatarUrl String?  @map("avatar_url")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  adminEvents Event[]

  @@map("users")
}

model Event {
  id                      String       @id @default(uuid())
  adminId                 String       @map("admin_id")
  name                    String
  description             String?
  date                    DateTime
  time                    String
  location                String
  slug                    String       @unique
  confirmationDeadline    DateTime?    @map("confirmation_deadline")
  maxChildrenAge          Int          @default(12) @map("max_children_age")
  maxChildrenPerGuest     Int?         @map("max_children_per_guest")
  maxCompanionsPerGuest   Int?         @map("max_companions_per_guest")
  defaultMessage          String?      @map("default_message")
  status                  EventStatus  @default(active)
  createdAt               DateTime     @default(now()) @map("created_at")
  updatedAt               DateTime     @updatedAt @map("updated_at")

  admin                   User         @relation(fields: [adminId], references: [id], onDelete: Cascade)
  guests                  Guest[]
  receptionists           EventReceptionist[]

  @@map("events")
}

model EventReceptionist {
  id        String   @id @default(uuid())
  eventId   String   @map("event_id")
  email     String
  createdAt DateTime @default(now()) @map("created_at")

  event     Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)

  @@map("event_receptionists")
}

model Guest {
  id                 String      @id @default(uuid())
  eventId            String      @map("event_id")
  name               String
  email              String?
  phone              String?
  code               String
  status             GuestStatus @default(pending)
  confirmedByGuestId String?     @map("confirmed_by_guest_id")

  respondedAt        DateTime?   @map("responded_at")
  checkedIn          Boolean     @default(false) @map("checked_in")
  checkedInAt        DateTime?   @map("checked_in_at")

  createdAt          DateTime    @default(now()) @map("created_at")
  updatedAt          DateTime    @updatedAt @map("updated_at")

  event              Event       @relation(fields: [eventId], references: [id], onDelete: Cascade)
  confirmedBy        Guest?      @relation("GuestConfirmedBy", fields: [confirmedByGuestId], references: [id], onDelete: SetNull)
  
  companions         GuestCompanion[] @relation("GuestHasCompanions")
  companionOf        GuestCompanion[] @relation("GuestIsCompanionOf")
  confirmedGuests    Guest[]     @relation("GuestConfirmedBy")
  children           GuestChild[]

  @@unique([eventId, code]) // código único por evento
  @@index([code]) // ← Mantém index para busca rápida
  @@map("guests")
}

model GuestCompanion {
  id                String   @id @default(uuid())
  guestId           String   @map("guest_id")
  companionGuestId  String   @map("companion_guest_id")
  createdAt         DateTime @default(now()) @map("created_at")

  guest             Guest    @relation("GuestHasCompanions", fields: [guestId], references: [id], onDelete: Cascade)
  companion         Guest    @relation("GuestIsCompanionOf", fields: [companionGuestId], references: [id], onDelete: Cascade)

  @@unique([guestId, companionGuestId])
  @@map("guest_companions")
}

model GuestChild {
  id           String    @id @default(uuid())
  guestId      String    @map("guest_id")
  name         String
  age          Int
  checkedIn    Boolean   @default(false) @map("checked_in")
  checkedInAt  DateTime? @map("checked_in_at")
  createdAt    DateTime  @default(now()) @map("created_at")

  guest        Guest     @relation(fields: [guestId], references: [id], onDelete: Cascade)

  @@map("guest_children")
}